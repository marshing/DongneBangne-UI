<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        >
        <TextView
            android:id="@+id/tv_recommendUser"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginRight="8dp"
            android:textColor="#b9b9b9"
            android:text="user"/>
        <TextView
            android:id="@+id/tv_recommend"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_recommendUser"
            android:layout_alignTop="@id/tv_recommendUser"
            android:textSize="11sp"
            android:textColor="#b9b9b9"
            android:layout_marginRight="8dp"
            android:text="댓글 테스트원래 댓글이란게 엔터가 없지 않습니까 그래서 내가 줄줄이 일일히 써서 확인해야후ㅜ"/>
        <TextView
            android:id="@+id/tv_recommendDate"
            android:layout_toRightOf="@id/tv_recommend"
            android:layout_alignTop="@id/tv_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#b9b9b9"
            android:text="09/02 16:23"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"/>
</LinearLayout>