<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pref_head"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageButton
            android:id="@+id/ib_prf_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_back_white"
            android:layout_margin="13dp"
            android:layout_gravity="left"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:background="#fc9696"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="송민지"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_margin="15dp"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:id="@+id/l_mNo"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="50dp">
                    <TextView
                        android:id="@+id/tv_major"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#ffffff"
                        android:text="컴퓨터공학과"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_older"
                        android:textSize="13sp"
                        android:textColor="#ffffff"
                        android:text="24세"/>
                </LinearLayout>
            <ImageButton
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/l_mNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_mode_edit_white"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:id="@+id/tv_introduction"
                android:textSize="13sp"
                android:textColor="#ffffff"
                android:text="안녕하세요."
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginRight="50dp"/>
            <ImageButton
                android:id="@+id/ib_editintro"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_mode_edit_white"/>
        </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>



</LinearLayout>