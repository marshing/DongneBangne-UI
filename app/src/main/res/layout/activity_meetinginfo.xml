<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="250dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:background="#4cffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_info_roomtitle"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:text="일식집 이ㅏ린"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:id="@+id/ll_3"
            android:layout_below="@id/tv_info_roomtitle">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_info_roomdate"
                android:textSize="10dp"
                android:textColor="#b9b9b9"
                android:layout_margin="3dp"
                android:text="방금 전"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_info_roompeoplenum"
                android:textSize="10dp"
                android:textColor="#b9b9b9"
                android:layout_margin="3dp"
                android:text="3 members"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/ll_3"
            android:id="@+id/ll_4"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_info_joinuser1"
                android:text="marshing"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_info_joinuser2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_info_joinuser3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_info_joinuser4" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_info_joinuser5" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_info_joinuser6" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_info_joinuser7" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_info_joinuser8" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_below="@id/ll_4"
            android:id="@+id/ll_5"
            android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_info_type"
            android:layout_centerHorizontal="true"
            android:textSize="12dp"
            android:textColor="#b9b9b9"
            android:text="빠른 / 밥 친구 모임"
            android:layout_margin="3dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_info_roomtag"
            android:layout_below="@id/ll_4"
            android:layout_centerHorizontal="true"
            android:textSize="12dp"
            android:textColor="#b9b9b9"
            android:layout_margin="3dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_info_locate"
            android:layout_below="@id/ll_4"
            android:layout_centerHorizontal="true"
            android:textSize="12dp"
            android:textColor="#b9b9b9"
            android:layout_margin="3dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_info_roompeoplenum2"
            android:layout_below="@id/ll_4"
            android:layout_centerHorizontal="true"
            android:textSize="12dp"
            android:textColor="#b9b9b9"
            android:layout_margin="3dp"
            android:text="4/8명"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_5"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_join"
                android:layout_marginRight="12dp"
                android:id="@+id/ib_join"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_cancel"
                android:id="@+id/ib_cancel"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>