<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_boardTitle"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="안녕"
            android:textColor="#363636"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentLeft="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_below="@id/tv_boardTitle">
            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/tv_boardDate"
                    android:textColor="#b9b9b9"
                    android:textSize="10sp"
                    android:text="04/29 04:13"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_boardContent"
                    android:layout_alignParentTop="true"
                    android:layout_above="@id/tv_boardDate"
                    android:textColor="#b9b9b9"
                    android:textSize="11sp"
                    android:text="학교 오는데 2시간정도 걸려서 학교근처에서\n자취할 생각인데 어느 고시원이 시설이 좋은가요.. "
                    android:layout_marginBottom="3dp"/>
            </RelativeLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_chat_bubble_outline_black_24dp"
                        android:id="@+id/iv_recommand"
                        android:layout_marginRight="7dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_recommandCount"
                        android:text="5"
                        android:textColor="#FFB9B9B9"
                        android:layout_gravity="center"/>
                </TableRow>
                <TableRow>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_thumb"
                        android:background="@drawable/ic_thumb_up_black_24dp"
                        android:layout_marginRight="7dp"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_thumbCount"
                        android:text="8"
                        android:textColor="#FFB9B9B9"
                        android:layout_gravity="center"/>
                </TableRow>


            </TableLayout>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"
        android:layout_centerInParent="true"/>

</LinearLayout>