<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    style="@style/NoTitle"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/lg_background"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logo"
        android:layout_marginBottom="60dp"/>

    <EditText
        android:id="@+id/et_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.3"
        android:background="@drawable/login_textbox"
        android:ems="10"
        android:gravity="center"
        android:hint="E-MAIL"
        android:inputType="textEmailAddress"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>

    <EditText
        android:id="@+id/et_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.3"
        android:background="@drawable/login_textbox"
        android:ems="10"
        android:gravity="center"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_marginTop="17dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>

    <ImageButton
        android:id="@+id/bt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/lg_login"
        android:layout_marginTop="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="17dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3a4f87"
                android:textSize="13sp"
                android:text="DON'T HAVE AN ACCOUNT?"
                android:layout_marginRight="4dp"/>

            <Button
                android:id="@+id/bt_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN UP"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textColor="#06b8f3"
                android:textSize="13sp"
                android:background="#00ff0000"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3a4f87"
                android:textSize="13sp"
                android:text="FORGOT PASSWORD?"
                android:layout_marginRight="4dp" />

            <Button
                android:id="@+id/bt_newpw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GET NEW PASSWORD"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textColor="#06b8f3"
                android:textSize="13sp"
                android:background="#00ff0000"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>